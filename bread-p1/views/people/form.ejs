<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-3">
  <div class="card">
    <!-- ✅ Gray header bar with dynamic title -->
    <div class="card-header bg-light text-center fw-bold">
      <%= title %>
    </div>

    <div class="card-body">
      <form method="post" action="<%= action %>">
        
        <div class="row mb-3">
          <div class="col-md-2"><label class="form-label">Name</label></div>
          <div class="col-md-10">
            <input required name="name" placeholder="insert your name" class="form-control" value="<%= person.name||'' %>">
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-2"><label class="form-label">Height</label></div>
          <div class="col-md-10">
            <input required type="number" name="height" placeholder="insert your height" class="form-control" value="<%= person.height||'' %>">
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-2"><label class="form-label">Weight</label></div>
          <div class="col-md-10">
            <input required type="number" step="0.1" name="weight" placeholder="insert your weight" class="form-control" value="<%= person.weight||'' %>">
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-2"><label class="form-label">Birth Date</label></div>
          <div class="col-md-10">
            <input required type="date" name="birth_date" class="form-control" value="<%= person.birth_date||'' %>">
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-2"><label class="form-label">Is Married</label></div>
          <div class="col-md-10 d-flex align-items-center gap-3">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="is_married" value="Not Yet" <%= person.is_married==='Not Yet'?'checked':'' %> required>
              <label class="form-check-label">Not Yet</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="is_married" value="Yes" <%= person.is_married==='Yes'?'checked':'' %> required>
              <label class="form-check-label">Yes</label>
            </div>
          </div>
        </div>
    </div>

    <!-- ✅ Gray footer bar with buttons -->
    <div class="card-footer bg-light d-flex gap-2">
      <button class="btn btn-primary" type="submit">Save</button>
      <a href="/" class="btn btn-warning text-white">Back</a>
    </div>

      </form>
  </div>
</div>
</body>
</html>
